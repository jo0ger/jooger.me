@import '~@/assets/stylus/var/index'
@import '~@/assets/stylus/mixin/index'

article.article-item {
  position relative
  padding 20px 0
  border-bottom 1px dashed $border-color-3

  .article-link {
    display block
    overflow hidden
    
    .title {
      font-size $font-size-lger
      transition all $animation-duration-slow $ease
    }

    .summary {
      flexLayout(, flex-start, flex-start)
      margin-top 8px
      color $text-color

      .thumb {
        flex 0 0 210px
        position relative
        width 210px
        max-height 120px
        margin-right 16px
        overflow hidden
        border-radius 2px

        img {
          width 100%
          height auto
          min-width 0
          min-height 0
          border-radius 2px
          object-fit cover
          transition transform $animation-duration-slower $ease-out

          &:hover {
            transform scale(1.1) rotate(2deg)
          }
        }

        .placeholder {
          width 100%
          height 120px
          line-height @height
          text-align center

          .icon {
            font-size 36px
            color alpha($black, .2)
          }
        }
      }

      .description {
        flex 1 0
        line-height 1.8
        text-align justify
        overflow hidden
        lineLimit(4)
      }
    }

    &:hover {
      .title {
        color $base-color
      }
    }
  }

  .status {
    flexLayout(, space-between)
    margin-top 10px
    font-size $font-size-sm
    color $text-color-secondary
    .meta {
      flexLayout(, flex-start)
      &-item {
        flexLayout(, flex-start)
        position relative
        margin-right 12px

        &::before {
          content ''
          width 2px
          height @width
          margin-right 4px
          border 1px solid $text-color-secondary
          border-radius 1px
        }
      }

      .category {
        .icon {
          margin-right 6px
        }
      }
    }

    .time {
      .icon {
        font-size $font-size-sm
      }
    }
  }
}

html.mobile {
  article.article-item {
    .summary {
      .thumb {
        flex-basis 110px
        width 110px
        .placeholder {
          height 80px
          line-height @height
        }
      }
    }  
  }
}