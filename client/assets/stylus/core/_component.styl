.banner-content {
  .title
  .subtitle {
    color $white
    text-transform uppercase
    font-weight bold
    letter-spacing 5px
    text-align center
  }

  .title {
    font-size 6vmin

    @media (max-width: 768px) {
      font-size 6.5vmin
    }

    @media (max-width: 480px) {
      font-size 7vmin
    }
  }

  .subtitle {
    margin-top 15px
    font-size 3vmin

    @media (max-width: 768px) {
      font-size 3.75vmin
    }

    @media (max-width: 480px) {
      font-size 4.5vmin
    }
  }
}

.search-page {

  .search-header {
    margin 50px auto 120px
    text-align center

    .title {
      font-size 5rem
      font-weight 700
      opacity .1
      letter-spacing 5px
    }

    .keyword {
      font-size 1.375rem
      opacity .5
      letter-spacing 2px
    }
  }
  
}