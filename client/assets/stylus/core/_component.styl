.hero-content {
  position absolute
  top 60%
  left 50%
  width 100%
  transform translate(-50%, -50%)
  layout-wrapper()

  .title
  .subtitle {
    color $white
    text-transform uppercase
    letter-spacing 5px
    text-align center

    +xxs() {
      letter-spacing normal
    }

    +xs() {
      letter-spacing 3px
    }
  }

  .title {
    font-size 4rem

    +xxs() {
      font-size 2.1rem
    }

    +xs() {
      font-size 3.6rem
    }

  }

  .subtitle {
    font-size 2rem
    font-weight normal

    +xxs() {
      font-size 1.05rem
    }

    +xs() {
      font-size 1.8rem
    }
  }
}

.search-page {

  .search-header {
    margin 50px auto 120px
    text-align center

    .title {
      font-size 5rem
      font-weight 700
      line-height 1.6
      opacity .1
      letter-spacing 5px
    }

    .keyword {
      font-size 1.375rem
      opacity .5
      letter-spacing 2px
    }

    +xxs() {
      margin 0 auto 30px
      .title {
        font-size 2.6rem
      }
      .keyword {
        font-size 1rem
      }
    }

    +xs() {
      margin 0 auto 60px
      .title {
        font-size 3.2rem
      }
      .keyword {
        font-size 1.1rem
      }
    }

    +sm() {
      margin 30px auto 80px
      .title {
        font-size 3.8rem
      }
      .keyword {
        font-size 1.2rem
      }
    }

    +md() {
      margin 30px auto 100px
      .title {
        font-size 4.4rem
      }
      .keyword {
        font-size 1.3rem
      }
    }
  }
}