.hero-content {
  position absolute
  top 0
  left 50%
  width 100%
  transform translateX(-50%)

  .title
  .subtitle {
    color $white
    text-transform uppercase
    letter-spacing 5px
    text-align center
  }

  .title {
    font-size 6vmin

    @media (max-width: 768px) {
      font-size 6.5vmin
    }

    @media (max-width: 480px) {
      font-size 7vmin
    }
  }

  .subtitle {
    margin-top 15px
    font-size 3vmin

    @media (max-width: 768px) {
      font-size 3.75vmin
    }

    @media (max-width: 480px) {
      font-size 4.5vmin
    }
  }
}

.search-page {

  .search-header {
    margin 50px auto 120px
    text-align center

    .title {
      font-size 5rem
      font-weight 700
      opacity .1
      letter-spacing 5px
    }

    .keyword {
      font-size 1.375rem
      opacity .5
      letter-spacing 2px
    }

    @media (max-width: 1366px) and (min-width: 769px) {
      margin 30px auto 100px

      .title {
        font-size 4.2rem
      }

      .keyword {
        font-size 1.225rem
      }
    }

    @media (max-width: 768px) and (min-width: 480px) {
      margin 0 auto 80px

      .title {
        font-size 3.4rem
      }

      .keyword {
        font-size 1.1rem
      }
    }

    @media (max-width: 479px) {
      margin 0 auto 60px

      .title {
        font-size 2.6rem
      }

      .keyword {
        font-size 1rem
      }
    }
  }
  
}