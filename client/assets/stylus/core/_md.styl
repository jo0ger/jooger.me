.md-body .highlight,
.md-body .highlight table {
  margin: 0;
  width: 100%;
}
.md-body .highlight {
  overflow-x: auto;
}
.md-body .highlight table,
.md-body .highlight tr,
.md-body .highlight td {
  padding: 0;
  border-collapse: collapse;
}
.md-body code {
  font-size: 12px;
  background-color: #f7f7f7;
  padding: 0 10px;
  margin: 0 5px;
  border-radius: 2px;
}
.md-body pre {
  font-size: 12px;
  overflow-x: auto;
  text-align: left;
  padding: 15px 25px;
  background-color: #f7f7f7;
  line-height: 1.5em;
}
.md-body .code pre {
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
}
.md-body .gutter pre {
  padding: 15px 0 15px 15px;
  color: #75715e;
  border-top-left-radius: 2px;
  border-bottom-left-radius: 2px;
}
.md-body blockquote {
  margin: 2em 0;
  padding-left: 30px;
  border-left: 5px solid #e6e6e6;
}
.md-body blockquote p {
  font-size: 17px;
  font-style: italic;
  line-height: 1.8em;
  color: #999;
}
.md-body img {
  display: block;
  max-width: 100%;
}

.md-body {
  ul
  ol {
    list-style none
  }

  ul.code-line {
    position absolute
    left 0
    top 0
    margin 0
    padding 15px 0 15px 10px
    color alpha($black, .2)
    line-height 1.5em
    text-align right
    list-style none

    .line {
      &::before {
        display none
      }
    }
  }

  img {
    cursor pointer
    box-shadow 0 5px 10px alpha($black, .01)
  }
}