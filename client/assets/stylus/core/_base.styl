* {
  box-sizing border-box
  -webkit-tap-highlight-color rgba(0, 0, 0, 0) //  remove tap highlight color for mobile safari
}

*:before,
*:after {
  box-sizing border-box
}

html {
  -webkit-text-size-adjust 100%
}

body {
  font 1.0625rem $font-family-base
  line-height 1.53
  color $text-color
  background $body-bg-color
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  user-select none
  overflow-y auto
  background $grey
  color $text-color

  &.dark-page {
    background $body-bg-color-dark
    color $text-color-dark
  }
}

a {
  color inherit
  background transparent
  text-decoration none
  outline none
  cursor pointer
  transition all $animation-duration-slow $ease

  &:focus {
    text-decoration none
    text-decoration-skip ink
  }

  &:active,
  &:hover {
    outline 0
    text-decoration none
  }

  &[disabled] {
    color $disabled-color
    cursor not-allowed
    pointer-events none
  }
}

// unify the setting of elements's margin and padding for browsers
body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,textarea,p,blockquote,th,td,hr,button,article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section {
  margin 0
  padding 0
}

ul,
ol {
  list-style none
}

// Reset fonts for relevant elements
button,input,select,textarea {
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
}

for n in 1...6 {
  h{n} {
    margin 0
    padding 0
    line-height 1.5
    // color $heading-color
    font-family $font-family-headings
    font-weight bold
    font-size (1rem + (6 - n) * 0.2rem)
  }
}

.link {
  color $base-color
  border-bottom 1px dotted $base-color
  cursor pointer
  transition all .3s ease-out
  
  &:hover {
    border-bottom-color $text-color
    color $text-color
    text-decoration none
  }

  body.dark-page & {
    color $text-color-dark
    border-color $text-color-dark

    &:hover {
      font-weight bold
    }
  }
  
}

[v-cloak] {
  display none
}