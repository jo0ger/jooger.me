.md-body {
  position: relative;
  -webkit-text-size-adjust: 100%;
  text-size-adjust: 100%;
  color: $text-color;
  font-family: $font-family-markdown;
  font-size: $font-size-base;
  font-weight 400
  line-height: 1.5;
  word-wrap: break-word;
}

.md-body::before {
  display: table;
  content: ""
}

.md-body::after {
  display: table;
  clear: both;
  content: ""
}

.md-body>*:first-child {
  margin-top: 0 !important
}

.md-body>*:last-child {
  margin-bottom: 0 !important
}

.md-body a:not([href]) {
  color: inherit;
  text-decoration: none
}
.md-body h1,
.md-body h2 {
  text-transform: uppercase;
}
.md-body h1 a:hover,
.md-body h2 a:hover {
  border-bottom: 3px solid #666;
}
.md-body h1 {
  font-size: 2rem;
  margin: 0 0 45px;
  letter-spacing: 1px;
}
.md-body h2 {
  font-size: 1.5rem;
  margin: 60px 0 30px;
  position: relative;
}
.md-body h3 {
  margin: 16px 0 8px;
}
.md-body .date {
  font-family: "Montserrat", "Helvetica Neue", "Hiragino Sans GB", "LiHei Pro", Arial, sans-serif;
  font-size: 1rem;
  color: #999;
  margin: 0 0 30px;
  letter-spacing: 1px;
}

.md-body p,
.md-body ul,
.md-body ol {
  margin: 0 0 .6em;
}
.md-body ul,
.md-body ol {
  list-style initial
}
.md-body strong {
  font-weight: 600;
  color: #444;
}
.md-body ol {
  padding-left: 1.6em;
}
.md-body ul {
  padding-left: 15px;
  list-style-type: none;
}
.md-body ul li:before {
  position: absolute;
  font-weight: 600;
  content: " Â· ";
  margin: 0;
  left: 0;
}
