.page-guestbook {
  .hero {
    width 100%
    height 500px
    overflow hidden

    &-bg {
      position absolute
      width auto
      height auto
      top -10px
      right -10px
      bottom -10px
      left -10px
      background-size cover
      background-position center center
      background-repeat no-repeat
      background-image url('~@/static/images/guestbook.png')
      transition all $animation-duration-slow $ease
    }

    &::before {
      content ''
      full()
      background-color alpha($black, .3)
      z-index 1
      transition all $animation-duration-slow $ease
    }

    &:hover {
      .hero-bg {
        filter blur(4px)
      }

      &::before {
        background-color alpha($black, .5)
      }
    }

    .info {
      full()
      flexLayout(column)
      max-width 50%
      margin 0 auto
      text-align center
      z-index 1

      .title
      .subtitle {
        font-weight lighter
        color $white
        text-shadow 0 2px 10px $text-color
        font-family $font-family-base
      }

      .title {
        font-size 2rem
      }

      .subtitle {
        margin-top 20px
        font-size 1.5rem
      }
    }
  }

  .message-widget {
    width $main-width
    margin 0 auto
    padding 20px 0 80px
  }
}