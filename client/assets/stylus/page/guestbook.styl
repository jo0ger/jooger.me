.page-guestbook {
  .hero {
    width 100%
    height 500px
    overflow hidden

    &-bg {
      position absolute
      width 110%
      height 110%
      top -10px
      right @top
      bottom @top
      left @top
      background-size cover
      background-position center center
      background-repeat no-repeat
      background-image url('~@/static/images/guestbook.jpg')
      transition all $animation-duration-slow $ease
    }

    &::before {
      content ''
      full()
      background-color alpha($black, .3)
      z-index 1
      transition all $animation-duration-slow $ease
    }

    &:hover {
      .hero-bg {
        filter blur(10px)
        transform scale(1.03)
      }

      &::before {
        background-color alpha($black, .5)
      }
    }

    .info {
      full()
      flexLayout(column)
      max-width 50%
      margin 0 auto
      text-align center
      z-index 1

      .title
      .subtitle {
        font-weight lighter
        color $white
        text-shadow 0 2px 10px $text-color
        font-family $font-family-base
      }

      .title {
        font-size 2rem
      }

      .subtitle {
        margin-top 20px
        font-size 1.5rem
      }
    }
  }

  > .content {
    width $main-width
    margin 0 auto
    padding 20px 0 80px

    > .wrapper {
      flexLayout(, flex-start, flex-start)
      .message-widget {
        flex 1 0
      }

      .guests-widget {
        flex 0 0 320px
        width 320px
        margin-left 12px

        .guest-list {
          flexLayout(, flex-start, flex-start, wrap)
          max-height calc(100vh - 165px)
          overflow auto
          .guest-item {
            flex 0 0 25%
            width 25%
            overflow hidden
            padding 10px
            text-align center
            font-size $font-size-sm
            .avatar {
              display block
              width 24px
              height @width
              margin 0 auto
              border-radius 100%
            }

            .name {
              display block
              textOverflow()
            }
          }
        }
      }
    }
  }
}