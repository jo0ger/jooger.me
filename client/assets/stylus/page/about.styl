.page-about {
  .hero {
    width 100%
    height 500px
    overflow hidden

    &-bg {
      position absolute
      width auto
      height auto
      top -10px
      right -10px
      bottom -10px
      left -10px
      background-size cover
      background-position center center
      background-repeat no-repeat
      background-image url('~@/static/images/about.jpg')
      background-color transparent
      transition all $animation-duration-slow $ease
    }

    &::before {
      content ''
      full()
      background-color alpha($black, .3)
      z-index 1
      transition all $animation-duration-slow $ease
    }

    &:hover {
      .hero-bg {
        filter blur(4px)
      }

      &::before {
        background-color alpha($black, .5)
      }
    }

    .info {
      full()
      flexLayout(column)
      color $white
      z-index 1

      .avatar {
        width 100px
        height @width
        border-radius 100%
        border 4px solid $grey-6
        box-shadow 0 2px 4px alpha($black, .16)
      }

      .name {
        margin-top 30px
        font-size 28px
      }

      .slogan {
        margin-top 5px
        font-weight lighter
        font-size $font-size-sm
      }

      .description {
        margin-top 20px
        font-size $font-size-lg
      }

      .social-list {
        margin-top 30px
        .social-item {
          display inline-block
          width 40px
          height @width
          line-height 30px
          margin 0 10px
          padding 5px
          border-radius 4px
          text-align center
          background-color $base-color

          &:hover {
            opacity .8
            color $white
          }

          .icon {
            font-size $font-size-lger + 2px
          }

          &.social-email {
            background-color $email
          }

          &.social-github {
            background-color $github
          }

          &.social-zhihu {
            background-color $zhihu
          }

          &.social-weibo {
            background-color $weibo
          }

          &.social-netease-music {
            background-color $netease-music
          }
        }
      }
    }
  }

  .content-widget {
    width $main-width
    margin 0 auto
    padding 20px 0 80px
  }
}