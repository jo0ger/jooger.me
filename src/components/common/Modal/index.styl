@import '~@/assets/style/init'

.modal {
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  z-index 999
  opacity 1

  .overlay {
    full()
    background var(--overlay-color)
    -webkit-touch-callout none
    touch-action none
    user-select none
    overflow hidden
  }

  .wrapper {
    position absolute
    top 50%
    left 50%
    padding $padding-md
    transform translate(-50%, -50%)
    background-color var(--light-color)
    border-radius 4px
    box-shadow 0 2px 15px 0 var(--dark-color-light)

    .title {
      margin-bottom $padding-md
      text-align center
    }
  }

  .app.mobile-layout & {
    .wrapper {
      max-width 90%
    }
  }
}
