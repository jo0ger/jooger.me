@import '~@/assets/style/init'

.article-item {
    position relative
    margin-bottom $padding-md
    padding-bottom $padding-md
    border-bottom 1px dashed $border-color-3

    .article-link {
        display block
        overflow hidden

        .title {
            transition(,, $ease)
        }

        .summary {
            flexLayout(, flex-start, flex-start)
            margin-top $padding-md

            .thumb {
                flex 0 0 150px
                position relative
                width 150px
                max-height 90px
                margin-right 16px
                overflow hidden
                border-radius 4px

                img {
                    width 100%
                    height auto
                    min-width 0
                    min-height 0
                    border-radius 2px
                    object-fit cover
                    transition(transform, ,$ease-out)

                    &:hover {
                        transform scale(1.1) rotate(2deg)
                    }
                }

                .placeholder {
                    width 100%
                    height 120px
                    line-height @height
                    text-align center

                    .icon {
                        font-size 36px
                        color alpha($black, .2)
                    }
                }
            }

            .description {
                flex 1 0
                margin 0
                text-align justify
                overflow hidden
                color $text-color-secondary
                lineLimit(4)
            }
        }

        &:hover {
            .title {
                color $heading-color
            }
        }
    }

    .status {
        flexLayout(, flex-start,,wrap)
        margin-top $padding-md
        font-size $font-size-sm
        color $text-color-secondary

        .meta {
            flex 1 0
            flexLayout(, flex-start)

            &-item {
                flexLayout(, flex-start)
                position relative
                margin-right 12px

                .icon {
                  margin-right $padding-xs
                  font-size $font-size-sm
                  color $text-color-secondary
                }
            }

            .category {
                .icon {
                    margin-right $padding-xs
                    font-size $font-size-sm
                }
            }
        }

        .time {
            .icon {
                font-size $font-size-sm
            }
        }

        .source {
            margin-left $padding-sm
        }
    }
}
