@import '~@/assets/style/init'

.tab {
  position relative
  height 100%

  .wrapper {
    display flex
    align-items center
    height 100%
  }

  .corner {
    position absolute
    top -1px
    left 0
    height 4px
    width 0
    border-radius 2px
    background-color $base-color
    box-shadow 0 2px 5px 0 rgba($black, .3)
    transition all $animation-duration-slow $ease
    z-index 2
  }

  .tab-item {
    display inline-block
    margin-right $padding-lg
    color $text-color-secondary

    .icon {
      display inline-block
      margin-right $padding-xs
      color $grey-5
      font-size $font-size-base
      transition all $animation-duration-slow $ease
    }

    .title {
      display inline-block
      font-weight bold
    }
    
    &:hover {
      color $text-color
      .icon {
        color $text-color
      }
    }

    &.actived {
      color $base-color

      .icon {
        color $base-color
      }
    }
  }

  &.tab-bordered {
    &::after {
      content ''
      position absolute
      right 0
      bottom 0
      left 0
      width 100%
      height 1px
      background $border-color-4
    }
  }
}
